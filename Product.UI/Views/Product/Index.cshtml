@using Product.Entity.Concrete;
@model List<Products>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Kodu</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Code</td>
            <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/AddProduct" class="btn btn-info">Yeni ürün</a>

